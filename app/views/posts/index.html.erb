<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<%= render :partial => @posts %>

<% if current_user %>
  <ul>
    <li><%= link_to 'New Post', new_post_path %></li>
    <li><%= link_to 'Log Out', logout_path, method: "delete" %></li>
  </ul>
<% else %>
  <ul>
    <li><%= link_to 'Login', 'login' %></li>
    <li><%= link_to 'Sign Up', 'users/new' %></li>
  </ul>
<% end %>
